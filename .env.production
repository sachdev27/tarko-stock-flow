# Production Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_PASSWORD=your-secure-database-password-here

# JWT Configuration (use a long random string)
JWT_SECRET_KEY=your-very-long-and-secure-jwt-secret-key-here-minimum-32-characters

# Default Admin User Configuration
# WARNING: Change these credentials immediately after first deployment!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@tarko.local
DEFAULT_ADMIN_PASSWORD=Admin@123
DEFAULT_ADMIN_FULLNAME=System Administrator

# Frontend Configuration
VITE_API_URL=http://your-domain.com

# Backup Configuration
BACKUP_RETENTION_DAYS=30
SNAPSHOT_STORAGE_PATH=/app/snapshots

# Optional: Enable debug mode (set to false in production)
FLASK_ENV=production
FLASK_DEBUG=false

# Optional: Email notifications for backups
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=admin@example.com

# Optional: Timezone for scheduled tasks
TZ=UTC
