DATABASE_URL=postgresql://user:password@localhost:5432/tarko_inventory
JWT_SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development

# Google Drive Sync (Optional)
# Set to 'true' to enable Google Drive backup sync
ENABLE_GOOGLE_DRIVE_SYNC=false

# Path to Google service account credentials JSON file
GOOGLE_DRIVE_CREDENTIALS_PATH=google_drive_credentials.json

# Option 1: Use a Shared Drive (Recommended for organizations)
# Get the Shared Drive ID from Google Drive URL: https://drive.google.com/drive/folders/SHARED_DRIVE_ID
# The service account must be added as a member of the Shared Drive
# GOOGLE_DRIVE_SHARED_DRIVE_ID=your-shared-drive-id-here

# Option 2: For personal Google accounts, leave GOOGLE_DRIVE_SHARED_DRIVE_ID empty
# Note: Service Accounts don't have storage quota. You'll need OAuth for personal accounts.

# Email Configuration for Password Reset
# See docs/EMAIL_CONFIGURATION.md for detailed setup instructions
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
APP_URL=http://localhost:3000
